<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#E0F7FA"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Input: длина пароля -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_password"
            android:hint="@string/hint_password_length"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordLengthInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="#000000"
                android:contentDescription="@string/desc_password_length"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Чекбоксы -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/useSpecialSymbols"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_special_symbols"
            android:drawableStart="@drawable/ic_symbols"
            android:drawablePadding="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:contentDescription="@string/desc_special_symbols" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/useLowercase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_lowercase"
            android:drawableStart="@drawable/ic_lowercase"
            android:drawablePadding="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:contentDescription="@string/desc_lowercase" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/useUppercase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_uppercase"
            android:drawableStart="@drawable/ic_uppercase"
            android:drawablePadding="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:contentDescription="@string/desc_uppercase" />

        <!-- Результат -->
        <TextView
            android:id="@+id/passwordOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_password_output"
            android:textSize="18sp"
            android:textColor="#3D3D3D"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/desc_password_output" />

        <!-- Кнопки -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/generateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_generate"
            android:layout_marginTop="8dp"
            app:icon="@drawable/ic_generate"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/copyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_copy"
            android:layout_marginTop="8dp"
            app:icon="@drawable/ic_copy"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

